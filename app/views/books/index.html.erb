<h1 class="title">Books</h1>
<%# 投稿一覧%>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
</table>




<%= form_for(@book, url: '/books') do |f| %>
    <%= f.label :title%>  <%= f.text_field :title %>
    <%= f.label :body%>   <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
<% end %>