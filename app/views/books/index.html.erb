<div class="container">
  <div class="row">
      <%# エラーメッセージ表示%>
      <div>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

        <!--user_info-->
    <div class="col-xs-3 clearfix">
        <div class="user_info">
          <h1>User Info</h1>
          <h2>画像</h2>
          <%= attachment_image_tag @user, :image, :fill, 300, 300, format: 'jpeg' %>
        </div>


        <%# 投稿機能%>
        <h1>New book</h1>
        <%= form_for(@book, url: '/books') do |f| %>
            <p>Title</p> 
            <%= f.text_field :title , class: "edit-title col-xs-12" %>

            <p>Opinion</p> 
            <%= f.text_area :body, class: "edit-body col-xs-12" %>
            <br>
            <div>
              <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
            </div>
        <% end %>
    </div>



      <%# 投稿された%>
      <div class="col-xs-9 clearfix">
        <% if @book.save %>
          <p>保存</p>
        <% else %>
          <h2>Books</h2>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <table class="table">
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td>
                  <%= link_to 'Edit', edit_book_path(book.id), class:"btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', "", method: :delete, "data-confirm" => "本当に消しますか?", class: "btn-sm btn-danger" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
  </div>
</div>