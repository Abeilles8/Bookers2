<div class="body">
  <div class="container">
    <p class="notice"></p>
    <div class="row">
      <div class="col-md-6 col-md-ofset-3">
        <h1>Editing Book</h1>
        <%= form_for(@book, url: "/books/#{@book.id}") do |f| %>
        <%# エラーメッセージ表示%>
          <% if @book.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <%# 投稿フォーム%>
          <div class="field row">
            <label for="book_title">Title</label>  
            <%= f.text_field :title, class:"col-xs-12 book_title" %>
          </div>

          <div class="field row">
            <label for="book_title">Body</label>  
            <%= f.text_area :body, class:"col-xs-12 book_title" %>
          </div>

          <div class="actions">
            <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
          </div>


          <div>
          <%= link_to "Show", book_path(@book.id) %>
          |
          <%= link_to "Back", books_path%>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>